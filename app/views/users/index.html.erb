<div class="container  p-3 px-5 px-sm-0">
    <% if @book.errors.any? %>
    <h3><%= @book.errors.count %> errors prohibited this obj from being saved</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>
    <div class="row">
        <div class="col-md-3">
        <%= render 'list', user: @user %>
        <%= render 'books/list', book: @book %>
        </div>
        <div class="col-md-8 offset-md-1">
            <h2>Users</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>image</th>
                        <th>name</th>
                        <th></th>
                   </tr>
                </thead>
                <tbody>
                    <% @users.each do |user| %>
                    <tr>
                      <td><%= image_tag user.get_profile_image %></td>
                      <td><%= user.name %></td>
                      <td><a href='/users/<%= user.id %>'>Show</a></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>