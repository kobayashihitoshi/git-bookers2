<div class="container  p-3 px-5 px-sm-0">
    <% if @book.errors.any? %>
    <h3><%= @book.errors.count %> errors prohibited this obj from being saved</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>
    <div class="row">
        <div class="col-md-3">
        <%= render 'list', user: @user %>
        <%= render 'books/list', book: @book %>
        </div>
        <div class="col-md-8 offset-md-1">
            <h2>Books</h2>
            <table class="table table-hover table-user-show">
                <thead>
                    <tr>
                        <th></th>
                        <th>Title</th>
                        <th>Opinion</th>
                        <th></th>
                   </tr>
                </thead>
                <% @books.each do |book| %>
                <tbody>
                    <tr>
                        <td>
                            <%= link_to user_path(@user) do %>
                                <%= image_tag @user.get_profile_image %>
                            <% end %>
                        </td>
                        <td class="book_link"><a href= '/books/<%= book.id %>'><%= book.title %></a></td>
                        <td class="book"><%= book.body %></td>
                        <td></td>
                    </tr>
                </tbody>
                <% end %>
            </table>
        </div>
    </div>
</div>